<% layout('layout/app') %>
<div class="container">
  <div class="row mb-2">
    <div class="col">
      <a href="/csview" class="btn btn-warning">Kembali</a>
    </div>
    <div class="col text-end">
      <h3>Edit Nasabah</h3>
    </div>
  </div>

  <div class="card p-3 mt-3">
    <form action="/cust/edit/<%= cust.cust_id %>" method="POST">
      <div class="row mb-3">
        <label for="nama" class="col-sm-2 col-form-label">Nama</label>
        <div class="col-sm-10">
          <input
            type="text"
            class="form-control"
            name="nama"
            value="<%= cust.nama %>"
            placeholder="Masukkan nama"
            required
          />
        </div>
      </div>
      <div class="row mb-3">
        <label for="umur" class="col-sm-2 col-form-label">Umur</label>
        <div class="col-sm-10">
          <input
            type="number"
            min="1"
            class="form-control"
            name="umur"
            value="<%= cust.umur %>"
            placeholder="Masukkan umur"
            required
          />
        </div>
      </div>
      <div class="row mb-3">
        <label for="status_pernikahan" class="col-sm-2 col-form-label"
          >Status Pernikahan</label
        >
        <div class="col-sm-10">
          <select name="status_pernikahan" class="form-select" required>
            <option value="" hidden>Pilih Status Pernikahan</option>
            <option value="lajang" <%= cust.status_pernikahan === 'lajang' ? 'selected' : '' %>>Lajang</option>
            <option value="menikah" <%= cust.status_pernikahan === 'menikah' ? 'selected' : '' %>>Menikah</option>
          </select>
        </div>
      </div>
      <div class="row mb-3">
        <label for="jaminan" class="col-sm-2 col-form-label"
          >Jaminan</label
        >
        <div class="col-sm-10">
          <select name="jaminan" class="form-select" required>
            <option value="" hidden>Pilih Jaminan</option>
            <option value="KTP" <%= cust.jaminan === 'KTP' ? 'selected' : '' %>>KTP</option>
            <option value="BPKB" <%= cust.jaminan === 'BPKB' ? 'selected' : '' %>>BPKB</option>
          </select>
        </div>
      </div>
      <div class="row mb-3">
        <label for="pekerjaan" class="col-sm-2 col-form-label">Pekerjaan</label>
        <div class="col-sm-10">
          <select name="pekerjaan" class="form-select" required>
            <option value="" hidden>Pilih Pekerjaan</option>
            <option value="PNS" <%= cust.pekerjaan === 'PNS' ? 'selected' : '' %>>PNS</option>
            <option value="petani" <%= cust.pekerjaan === 'petani' ? 'selected' : '' %>>Petani</option>
            <option value="pengangguran" <%= cust.pekerjaan === 'pengangguran' ? 'selected' : '' %>>pengangguran</option>
            <option value="pelajar" <%= cust.pekerjaan === 'pelajar' ? 'selected' : '' %>>Pelajar</option>
            <option value="karyawan" <%= cust.pekerjaan === 'karyawan' ? 'selected' : '' %>>Karyawan</option>
          </select>
        </div>
      </div>
      <div class="row mb-3">
        <label for="penghasilan" class="col-sm-2 col-form-label"
          >Penghasilan (Rp)</label
        >
        <div class="col-sm-10">
          <input
            type="text"
            class="form-control"
            name="penghasilan"
            value="<%= cust.penghasilan %>"
            placeholder="Masukkan penghasilan perbulan (Rp)"
            required
          />
        </div>
      </div>
      <div class="row mb-3">
        <label for="tempat_tinggal" class="col-sm-2 col-form-label"
          >Tempat Tinggal</label
        >
        <div class="col-sm-10">
          <select name="tempat_tinggal" class="form-select">
            <option value="" hidden>Pilih Tempat Tinggal</option>
            <option value="sendiri" <%= cust.tempat_tinggal === 'sendiri' ? 'selected' : '' %>>Sendiri</option>
            <option value="kontrak" <%= cust.tempat_tinggal === 'kontrak' ? 'selected' : '' %>>Kontrak</option>
          </select>
        </div>
      </div>
      <div class="row mb-3">
        <div class="col-sm-10">
          <input
            type="text"
            class="form-control"
            name="hasil"
            value="<%= cust.hasil %>"
            id="hasilPrediksi"
            hidden
          />
        </div>
      </div>
      <div class="text-center">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/create.js"></script>
