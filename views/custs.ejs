<% layout('layout/app') %>
<div class="container">
  <div class="text-end">
    <a href="/logout" class="btn btn-outline-danger">Logout</a>
  </div>
  <div class="mb-3">
    <h2 class="text-center border-bottom pb-3">Data Nasabah</h2>
  </div>
  <div class="table-responsive">
    <table class="table text-center table-striped table-bordered">
      <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Nama</th>
          <th scope="col">Umur</th>
          <th scope="col">Status Pernikahan</th>
          <th scope="col">Pekerjaan</th>
          <th scope="col">Penghasilan</th>
          <th scope="col">Jaminan</th>
          <th scope="col">Tempat Tinggal</th>
          <th scope="col">Hasil</th>
        </tr>
      </thead>
      <tbody>
        <% custs.forEach((cust, index) => { %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= cust.nama %></td>
          <td><%= cust.umur %></td>
          <td><%= cust.status_pernikahan %></td>
          <td><%= cust.pekerjaan %></td>
          <td><%= cust.penghasilan %></td>
          <td><%= cust.jaminan %></td>
          <td><%= cust.tempat_tinggal %></td>
          <td>
            <% if (cust.hasil === 'layak') { %>
            <span class="badge bg-success">Layak</span>
            <% } else if (cust.hasil === 'tidak layak') { %>
            <span class="badge bg-danger">Tidak Layak</span>
            <% } else { %> - <% } %>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
